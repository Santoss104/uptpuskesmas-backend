{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "@types"]
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "@types/**/*.d.ts",
    "backend/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
