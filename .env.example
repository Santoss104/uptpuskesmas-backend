# Server Configuration
PORT=5000
NODE_ENV=development
BODY_LIMIT=10mb
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
DB_TIMEOUT=30000

# Limits
UPLOAD_LIMIT=50mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Cloudinary
CLOUD_NAME=your_cloudinary_name
CLOUD_API_KEY=your_api_key
CLOUD_SECRET_KEY=your_secret_key

# Redis
REDIS_URI=redis://your-redis-url

# Security - Generate your own secure keys!
ACCESS_TOKEN=your-super-secure-access-token-secret
REFRESH_TOKEN=your-super-secure-refresh-token-secret
COOKIE_SECRET=your-cookie-secret
SESSION_SECRET=your-session-secret

# Token Expiration (in minutes for development)
ACCESS_TOKEN_EXPIRE=5
REFRESH_TOKEN_EXPIRE=4320

# Production Security Settings
BCRYPT_SALT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000
LOGIN_RATE_LIMIT=5
REGISTRATION_RATE_LIMIT=3
